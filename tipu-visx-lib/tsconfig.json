{
  "compilerOptions": {
    "target": "ESNext", // Use modern JavaScript features
    "module": "ES2020", // Use ES modules (not CommonJS)
    "moduleResolution": "node", // Resolve modules like Node.js
    "lib": ["ESNext", "DOM"], // Include the necessary libraries
    "esModuleInterop": true, // Ensures compatibility with CommonJS imports
    "skipLibCheck": true, // Skip type checking of declaration files for faster compilation
    "strict": true, // Enable strict type checking
    "declaration": true, // Generate .d.ts declaration files for your library
    "declarationDir": "./dist/types", // Output declaration files to a specific folder
    "outDir": "./dist", // Output folder for compiled files
    "sourceMap": true, // Generate source maps for debugging
    "jsx": "react",
    "resolveJsonModule": true // Add this line to support JSX syntax in .tsx files
  },
  "include": ["src/**/*"], // Include all TypeScript files in the src folder
  "exclude": ["node_modules"] // Exclude node_modules folder
}
